%%% draw in matlab %%%
figure;
set(gcf, 'WindowButtonMotionFcn', @mouseMove);

function mouseMove(object, eventdata)
a = 0;
b = 0;
while (a == 0 && b == 0)
    [a b] = ginput(1)
C = get(gca, 'CurrentPoint');
title(gca, ['(x, y) = (' num2str(C(1, 1)) ', ' num2str(C(1, 2)) ')']);
plot(C(1,1), C(1, 2), 'k.');
xlim([0 1]);
ylim([0 1]);
hold on;
end